# $MY_COMPUTER should preferably be set in .bashrc for each and every computer.

################################################################################
# Debby - home
################################################################################
if [ "$MY_COMPUTER" = "goby" ]; then
	# OP-TEE
	#export LAUNCH_TERMINAL="xterm -e"
	#export LAUNCH_TERMINAL="urxvt -bg Black -e bash -c"
	export LAUNCH_TERMINAL="urxvt -fn 'xft:Monospace:pixelsize=10' -bg Black -e bash -c"
	export OPTEE_ROOT_PROJ_PATH="/media/jbech/TSHB_LINUX/devel/optee_projects"
	export OPTEE_PROJ_PATH="${OPTEE_ROOT_PROJ_PATH}/qemu"
	export TA_LOAD_ADDR="0x113020"

	# Buildroot
	export BR2_DL_DIR=$HOME/tmp/buildroot_dl

	# ccache
	export CCACHE_DIR=/media/jbech/TSHB_LINUX/.ccache

	# Editor
	export EDITOR=vim

	# Locales
	export LC_ALL=en_US.UTF-8

	# Prompt
	export PS1="\[\033[32m\]\u@\h\[\033[37m\] \w\[\033[32m\] \`parse_git_branch\`\\n\[\033[37m\]\$ "

	# Term
	# export TERM=screen-256color

	# Path
	export PATH=$PATH:$HOME/bin:$HOME/.local/bin

	# Aliases only relevelant to "goby"
	alias sshd='cd /media/jbech/TSHB_LINUX/'

	# Yocto
	export SSTATE_DIR="/media/jbech/TSHB_LINUX/yocto-caches/sstate-cache"
	export DL_DIR="/media/jbech/TSHB_LINUX/yocto-caches/downloads"

################################################################################
# Guppy - work
################################################################################
elif [ "$MY_COMPUTER" = "guppy" ]; then
	# OP-TEE
	export LAUNCH_TERMINAL="terminator -x"
	export OPTEE_ROOT_PROJ_PATH="/home/jbech/devel/optee_projects"
	export OPTEE_PROJ_PATH="${OPTEE_ROOT_PROJ_PATH}/qemu"
	export LAUNCH_TERMINAL="urxvt -fn 'xft:Monospace:pixelsize=10' -bg Black -e bash -c"
	export TA_LOAD_ADDR="0x103020"


	# Buildroot
	export BR2_DL_DIR=$HOME/tmp/buildroot_dl

	# ccache
	export CCACHE_DIR=$HOME/.ccache

	# Editor
	export EDITOR=vim

	# Locales
	export LC_ALL=en_US.UTF-8

	# Prompt
	export PS1="\[\033[32m\]\u@\h\[\033[37m\] \w\[\033[32m\] \`parse_git_branch\`\\n\[\033[37m\]\$ "

	# Term
	export TERM=screen-256color

	# Path
	export PATH=$PATH:$HOME/bin:$HOME/.local/bin

	# Aliases only relevelant to "guppy"
	alias optee_local='ssh -X optee@192.168.1.61'

	# Yocto
	export SSTATE_DIR="/home/jbech/devel/yocto-caches/sstate-cache"
	export DL_DIR="/home/jbech/devel/yocto-caches/downloads"
fi
